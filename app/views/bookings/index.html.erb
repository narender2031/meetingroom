<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<body>    
    <div class="row">
        <div class="row">
            <%= render partial: "layouts/left_col", :locals => {select_item: "Bookings"} %>
            <div class="col-md-11 col-sm-11 col-xs-10" style=" overflow: hidden;">
                <div class="right-col">
                    
                    <div class="container" id="table_continer">
                        <div class="row">
                            <% flash.each do |name, msg|%>
                                <center> 
                                    <div class='flash-message alert alert-<%= name %> flash-message-dashbord' id="flash-message-desktop">
                                        <center><p class="flash-message-dash" style="position: relative;top: -5px;color: #facdcd;"><%= msg %></p></center>
                                    </div>
                                </center>
                            <% end %>
                            <table id ="myTable" class="table table-striped table-bordered" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr class="heading">
                                        <th class="sorting" tabindex="0" aria-controls="datatable-checkbox" rowspan="1" colspan="1" aria-label="Name: active to sort column ascending" ">
                                            Booking Date
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-checkbox" rowspan="1" colspan="1" aria-label="Phone: active to sort column ascending">
                                            Start at
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-checkbox" rowspan="1" colspan="1" aria-label="Location: active to sort column ascending" >
                                            Duration
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-checkbox" rowspan="1" colspan="1" aria-label="Location: active to sort column ascending" >
                                            seats
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @bookings.each do |booking| %>
                                        <tr class="even pointer">
                                            <td class="location-table-data" id="location_id"><%= booking.booking_date  %></td>
                                            <td class="location-table-data" id="name"><%= booking.booking_start_time %></td>
                                            <td class="location-table-data"><%= booking.duration %></td>
                                            <td class="location-table-data"><%= booking.seats %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>    
                    </div>
                </div>  
            </div>
        </div>
    </div>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script>
    $(document).ready(function(){
        $('.dropdown-toggle').dropdown();
    });
    </script>
    <script>
    $(document).ready(function() {
        $('#myTable').DataTable();
    } );
    
    </script> 
</body>   
